{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run and Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Graph_homomorphisms", // Path to the compiled binary
            "args": [],
            "cwd": "${workspaceFolder}",
            "environment": [],
